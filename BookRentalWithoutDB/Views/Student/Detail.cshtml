@model Student

<table>
    <thead>
    <tr>
        <td width="200"> ID </td>
        <td>@Model.ID</td>
    </tr>
    <tr>
        <td width="200"> Name </td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td width="200"> Surname </td>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <td width="200"> Birth Date </td>
        <td>@Model.BirthDate.ToLongDateString()</td>
    </tr>
    </thead>
</table>

<table>
    <thead>
    <tr>
        <td>
            <form asp-controller="Student" asp-action="Edit" asp-route-id="@Model.ID">
                <button type="submit" class="btn btn-primary">
                    Edit Student
                </button>
            </form>
        </td>
        <td>
            <form asp-controller="Student" asp-action="Delete" asp-route-id="@Model.ID" method="post">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">
                    Remove Student
                </button>
            </form>
        </td>
    </tr>
    </thead>
</table>